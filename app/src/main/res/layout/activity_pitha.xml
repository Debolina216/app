<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.browser.pitha"
    android:background="@drawable/background74">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="372dp"
        android:layout_height="269dp"
        app:srcCompat="@drawable/pithaassam1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="376dp"
        android:layout_height="119dp"
        android:layout_marginBottom="4dp"
        android:text="Pitha is one of the most popular snack time dishes, usually eaten at breakfast or with evening tea. There is a wide variety of pithas available. They can be sweet or savoury, steamed or fried, cooked in a many different techniques. This is one of the most technical foods of Assam and needs a lot of precision to get the dish to turn out correct.  "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
