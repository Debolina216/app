<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.browser.aktori"
    android:background="@drawable/background23">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="373dp"
        android:layout_height="293dp"
        app:srcCompat="@drawable/aktori1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintVertical_bias="0.32"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="390dp"
        android:layout_height="127dp"
        android:text="Aktori is an ancient recipe from the dry valleys of Lahaul-Spiti in Himachal Pradesh. It is a kind of cake. The buckwheat leaves are mixed with the flour of wheat and then prepared in pancakes. Aktori is generally served with Ghee and Honey. It is considered to have originated from the Lahaul-Sipti Valley but it can be found in almost every part of Himachal Pradesh. Among the festive season food, Aktori is also equally enjoyed by the people in Himachal Pradesh.  "
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
